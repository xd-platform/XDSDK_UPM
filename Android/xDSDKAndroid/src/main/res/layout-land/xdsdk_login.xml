<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_bg_round">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:id="@+id/root"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:background="@null"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/xdsdk_close"
                android:visibility="visible" />

            <TextView
                android:id="@+id/version"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:padding="5dp"
                android:textColor="#9987675B"
                android:layout_marginLeft="35dp"
                android:textSize="13sp"
                android:visibility="invisible" />

            <View
                android:id="@+id/hint_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:layout_marginLeft="35dp"
                android:visibility="visible" />


        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/xdsdk_logo_land" />


        <ImageButton
            android:id="@+id/login_entry_first"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/login_entry_center"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/login_entry_second"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:paddingLeft="-30dp"
        android:background="@drawable/xd_start_bottom_bg_round"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/login_entry_third"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/login_entry_bottom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/login_entry_fourth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/login_entry_fifth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:visibility="gone" />

    </LinearLayout>


</FrameLayout>

