<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="260dp"
    android:background="@drawable/start_bg_round"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:layout_marginRight="0dp"
        android:background="@null"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/xd_close"
        android:tag="UserCenter"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/leftLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/userPortrait"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/xd_default_portrait" />

            <TextView
                android:id="@+id/username"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="游客账号"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/pay_content_key"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/upgradeAcount"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/xd_ucenter_upgrade_bg"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/xd_upgrade" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="账号升级"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/security"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/xd_ucenter_service_bg"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/xd_security" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="账号安全"
                    android:textColor="#8e7065"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/service"
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/xd_ucenter_service_bg"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/xd_service" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="联系客服"
                    android:textColor="#8e7065"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="310dp"
            android:layout_height="36dp"
            android:background="@drawable/pay_submit"
            android:text="退出"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>