<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="360dp"
    android:layout_height="260dp"
    android:background="@drawable/start_bg_white_round">

    <View
        android:id="@+id/version_hint"
        android:layout_width="50dp"
        android:layout_height="30dp"
        />

    <TextView
        android:id="@+id/version"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:layout_gravity="start"
        android:layout_marginLeft="35dp"
        android:paddingLeft="5dp"
        android:text="3.1.1"
        android:textColor="#9987675B"
        android:textSize="13sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:text="用户中心"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/close"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="340dp"
        android:layout_height="182dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/content_bg_gray_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.xd.sdk.ui.ShadowLayout
        android:id="@+id/imageView"
        android:layout_width="338dp"
        android:layout_height="177dp"
        android:layout_marginTop="6dp"
        app:blurRadius="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.0"
        app:shadowColor="#e3e3e3"
        app:shadowRadius="6dp"
        app:xOffset="0dp"
        app:yOffset="2dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shadow_dialog_bg" />
    </com.xd.sdk.ui.ShadowLayout>

    <ImageView
        android:id="@+id/head_iv"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/taptap_logo_small"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/roleName_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="David Rodriguez"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/head_iv" />

    <TextView
        android:id="@+id/roleId_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="游戏ID：66399452"
        android:textColor="#999999"
        android:textIsSelectable="false"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@id/roleName_tv"
        app:layout_constraintStart_toEndOf="@id/roleName_tv"
        app:layout_constraintTop_toBottomOf="@id/roleName_tv" />

    <TextView
        android:id="@+id/userId_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:minLines="1"
        android:text="用户ID：66399452"
        android:textColor="#999999"
        android:textIsSelectable="false"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/roleId_tv"
        app:layout_constraintStart_toEndOf="@+id/roleId_tv"
        app:layout_constraintTop_toBottomOf="@+id/roleId_tv" />

    <Button
        android:id="@+id/auth_btn"
        android:layout_width="84dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_gray_4_bg"
        android:focusable="false"
        android:text="已在本游戏实名"
        android:textColor="#00B8C8"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@id/userId_tv" />

    <ImageView
        android:id="@+id/taptapInfoBgImageView"
        android:layout_width="137dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tap_info_gray_bg"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/auth_btn" />

    <ImageView
        android:id="@+id/taptapIconImageView"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/taptap_logo_small"
        android:src="@drawable/taptap_logo_small"
        app:layout_constraintBottom_toTopOf="@id/taptapInfoBgImageView"
        app:layout_constraintStart_toStartOf="@id/taptapInfoBgImageView"
        app:layout_constraintTop_toBottomOf="@id/taptapInfoBgImageView" />

    <View
        android:id="@+id/view3"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:background="#CDCDCD"
        app:layout_constraintBottom_toTopOf="@id/taptapInfoBgImageView"
        app:layout_constraintStart_toEndOf="@id/taptapIconImageView"
        app:layout_constraintTop_toBottomOf="@id/taptapInfoBgImageView" />

    <TextView
        android:id="@+id/taptapName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:ellipsize="end"
        android:maxWidth="80dp"
        android:maxLines="1"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:text="Karen Martin"
        android:textColor="#999999"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/taptapInfoBgImageView"
        app:layout_constraintEnd_toEndOf="@id/taptapInfoBgImageView"
        app:layout_constraintStart_toEndOf="@id/view3"
        app:layout_constraintTop_toBottomOf="@id/taptapInfoBgImageView" />

    <Button
        android:id="@+id/contact_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginBottom="3dp"
        android:background="#00FFFFFF"
        android:shadowColor="#00FFFFFF"
        android:text="联系客服"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logout_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="3dp"
        android:background="#00FFFFFF"
        android:text="退出账号"
        android:textColor="#000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/contact_btn" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="#00FFFFFF"
        android:padding="5dp"
        android:src="@drawable/xd_close_new"
        android:tag="UserCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>