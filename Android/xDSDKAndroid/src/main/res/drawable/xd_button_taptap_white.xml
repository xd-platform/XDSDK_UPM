<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffffff" />

            <corners android:radius="8dp"/>
            <stroke
                android:width="1dp"
                android:color="#CDCDCD"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ffffff" />

            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#CDCDCD"/>
        </shape>
    </item>

</selector>
