<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_bg_round">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="145dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/xd_logo_landscape"/>
        <View
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:background="#8d6a65"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="用户协议"
            android:textColor="@color/xd_white"
            android:textSize="22sp"/>

    </LinearLayout>

    <WebView
        android:id="@+id/wv_privacy"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:background="@drawable/start_bg_round"
        android:layout_height="280dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
    <Button
        android:id="@+id/bt_privacy_ok"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:textColor="@color/xd_white"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:background="@drawable/xdsdk__bg_round_button"
        android:layout_marginTop="16dp"
        android:text="确认"/>
    </LinearLayout>

</LinearLayout>