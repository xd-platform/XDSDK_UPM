<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/start_bg_round">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="28dp"
            android:layout_height="34dp"
            android:layout_marginLeft="4dp"
            android:layout_gravity="left"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/xd_back" />

        <ImageButton
            android:id="@+id/close"
            android:tag=""
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/xd_close" />

    </FrameLayout>

    <!--<ImageView-->
        <!--android:layout_width="198dp"-->
        <!--android:layout_height="45dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="-30dp"-->
        <!--android:background="@null"-->
        <!--android:padding="0dp"-->
        <!--android:scaleType="fitCenter"-->
        <!--android:src="@drawable/xd_logo_landscape" />-->

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

        <include layout="@layout/xdsdk__page_register_content"
            android:layout_width="@dimen/form_element_width"
            android:layout_height="wrap_content" />

    </FrameLayout>

</LinearLayout>
