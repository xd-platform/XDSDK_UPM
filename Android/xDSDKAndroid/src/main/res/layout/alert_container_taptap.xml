<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="180dp"
    android:background="@drawable/start_bg_white_round">

    <TextView
        android:id="@+id/tv_alert_content"
        android:layout_width="260dp"
        android:layout_height="84dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="dadfafadfad"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_alert_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_alert_positive"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/xd_button_taptap_blue"
            android:textColor="@color/xd_white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_alert_negative"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/xd_button_taptap_white"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp" />
    </LinearLayout>

</RelativeLayout>