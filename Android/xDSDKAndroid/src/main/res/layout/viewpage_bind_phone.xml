<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/form_element_width"
    android:layout_height="wrap_content"
    android:background="@drawable/start_bg_round">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:background="@drawable/edittext_bg_round"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone_verify_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:hint="+"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittextHint"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/et_auth_country_code"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:digits="0123456789"
            android:ems="3"
            android:imeOptions="flagNoFullscreen|flagNavigateNext"
            android:inputType="phone"
            android:text="86"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittextHint"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:background="#999999" />

        <EditText
            android:id="@+id/et_auth_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:ems="10"
            android:hint="手机号"
            android:imeOptions="flagNoFullscreen|flagNavigateNext"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:paddingRight="15dp"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittextHint"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_auth_verify_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="129"
            android:background="@drawable/edittext_bg_round"
            android:ems="10"
            android:hint="验证码"
            android:imeOptions="flagNoFullscreen|flagNavigateNext"
            android:inputType="number"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittextHint"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/bt_auth_verify_action"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_weight="89"
            android:background="@drawable/xdsdk__bg_round_button"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/xdsdk__action_text"
            android:textSize="@dimen/text_size_extreme_small" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_auth_verify_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_marginTop="8dp"
        android:background="@drawable/xdsdk__bg_round_button"
        android:gravity="center"
        android:text="确认"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>