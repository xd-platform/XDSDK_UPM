<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="180dp"
    android:background="@drawable/start_bg_round">

    <TextView
        android:id="@+id/tv_alert_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="dadfafadfad"
        android:textColor="#957266"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_alert_negative"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/white_button_round_bg"
            android:textColor="#957266"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bt_alert_positive"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:background="@drawable/orange_round_button_bg"
            android:textColor="@color/xd_white"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>