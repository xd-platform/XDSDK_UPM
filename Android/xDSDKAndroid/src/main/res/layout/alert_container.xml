<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="180dp"
    android:background="@drawable/start_bg_round">

    <TextView
        android:id="@+id/tv_alert_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="dadfafadfad"
        android:textColor="#957266"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_alert_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_alert_negative"
            android:layout_width="89dp"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/xd_ucenter_upgrade_bg"
            android:textColor="@color/xd_white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_alert_positive"
            android:layout_width="89dp"
            android:layout_height="36dp"
            android:background="@drawable/xd_ucenter_service_bg"
            android:textColor="#957266"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>