<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/form_element_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号保护"
        android:textColor="#a37d79"
        android:textSize="31sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在不常用的设备上登录，需要验证你的手机号码"
        android:textColor="#a37d79"
        android:textSize="@dimen/text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/xdsdk__bg_round_dark"
        android:layout_gravity="center_vertical">

        <!--<TextView-->
            <!--android:id="@+id/country_code"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:paddingLeft="20dp"-->
            <!--android:paddingRight="20dp"-->
            <!--android:textColor="#a37d79"-->
            <!--android:textSize="18sp"/>-->

        <!--<View-->
            <!--android:layout_width="0.5dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginTop="14dp"-->
            <!--android:layout_marginBottom="14dp"-->
            <!--android:background="#a37d79" />-->

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#a37d79"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <EditText
            android:id="@+id/code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="129"
            android:background="@drawable/edittext_bg_round"
            android:hint="验证码"
            android:imeOptions="flagNoFullscreen|flagNavigateNext"
            android:inputType="number"
            android:digits="0123456789"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:textColor="@color/edittext"
            android:textColorHint="@color/edittextHint"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/action"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="89"
            android:layout_marginLeft="14dp"
            android:background="@drawable/xdsdk__bg_round_button"
            android:gravity="center"
            android:text="发送验证码"
            android:textColor="@color/xdsdk__action_text"
            android:textSize="@dimen/text_size"/>

    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/xdsdk__bg_round_button"
        android:gravity="center"
        android:text="确认"
        android:textColor="#FFFFFF"
        android:textSize="24sp"/>


</LinearLayout>