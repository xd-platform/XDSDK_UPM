<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="290dp"
    android:layout_height="330dp"
    android:background="@drawable/start_bg_white_round"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tv_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/account_protected"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:background="#00FFFFFF"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/xd_back_new" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="#00FFFFFF"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/xd_close_new" />

    <View
        android:id="@+id/v_bg"
        android:layout_width="270dp"
        android:layout_height="226dp"
        android:layout_below="@id/tv_confirm_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/content_bg_gray_round" />

    <com.xd.sdk.ui.ShadowLayout
        android:id="@+id/sl_bg"
        android:layout_width="268dp"
        android:layout_height="220dp"
        android:layout_below="@id/tv_confirm_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        app:blurRadius="6dp"
        app:shadowColor="#e3e3e3"
        app:shadowRadius="6dp"
        app:xOffset="0dp"
        app:yOffset="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_dialog_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="46dp"
                android:layout_marginBottom="22dp"
                android:text="@string/confirm_tips"
                android:textColor="#000000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/tap_info_gray_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/china_area"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:background="#999999" />

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    tools:text="18659955977" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/code"
                    android:layout_width="117dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/stroke_gray_cor_bg"
                    android:hint="@string/input_confirm_code"
                    android:padding="8dp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/action"
                    android:layout_width="89dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/stroke_gray_cor_bg"
                    android:gravity="center"
                    android:text="@string/get_confirm_code"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </com.xd.sdk.ui.ShadowLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="210dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/taptap_button_blue_long"
        android:text="@string/sure_submit"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />


</RelativeLayout>