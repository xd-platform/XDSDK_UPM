<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/pop_count_time_port_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_pop_count_tip"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_width="10dp"
        android:layout_height="14dp"
        android:scaleType="fitCenter"
        android:src="@drawable/health_tip"/>

    <TextView
        android:id="@+id/tv_pop_count_content"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/xd_white"
       android:layout_toRightOf="@id/iv_pop_count_tip"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" />



        <ImageButton
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@id/tv_pop_count_content"
            android:id="@+id/ib_pop_count_close"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/xd_close_web" />


</RelativeLayout>